<body>

    <div class="aboutPage">
        <h1>About {{tutor.first_name}}</h1>

        <div class="averageRating">
            <h3>
                {{#if tutor.average_rating}}
                Rating: {{tutor.average_rating}}
                {{else}}
                No ratings yet!
                {{/if}}
            </h3>
        </div>

        <div class="subjects">
            <h3>Subjects Tutored:
                <ul>
                    {{#each subjects}}
                    <li>{{this.subject_name}}</li>
                    {{/each}}
                </ul>
            </h3>
        </div>

        <div class="aboutText">
            <h4>{{tutor.about}}</h4>
        </div>

        <div class="bookButton">
            <a href="">Book</a>
        </div>

        <img src = "../img/{{tutor.img_url}}" alt = "{{tutor.first_name}}'s profile photo.">
    </div>

    <div class="container">
        <div class="posts", id="demotext">
            <h2>Posts</h2>
            {{#each posts}}
            <div class="post">
                <h4>{{title}}</h3>
                <p>{{content}}</p>
                <p>{{likes}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</body>