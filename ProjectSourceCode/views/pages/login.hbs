<div style="margin-top: 5%;">
    {{> message}}
    <head>
        <link rel="stylesheet" href="../css/style.css">
    </head>
    <center>
        <div style="margin-top: 5%;">
            <font size="5">
                <b>
                    Login
                </b>
            </font>
        </div>
        <form action="/login" method="POST">
            <div>
                <input type="radio" id="student_radio" name="tutor_student_rad" value="student" required>
                <label for="student_radio">Student</label>
                <input type="radio" id="tutor_radio" name="tutor_student_rad" value="tutor">
                <label for="tutor_radio">Tutor</label>
            </div>
            <div>
                <label for='username'>
                    <b>Username:</b>
                </label>
            </div>
            <div>
                <input name='username' required>
            </div>
            <div>
                <label for='password'>
                    <b>Password:</b>
                </label>
            </div>
            <div>
                <input type="password" name="password" required>
            </div>
            <div>
                <Button type='submit' class='btn btn-primary'>Login</Button>
            </div>
        </form>
        <br>
        <p1>Don't have an account? <a href="/register">Register here!</a></p1>
    </center>
</div>
