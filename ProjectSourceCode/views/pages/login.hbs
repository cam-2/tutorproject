<div style="margin-top: 5%;">
    {{> message}}
    <center>
        <div class ="form-container">
            <h2>Login</h2>
            <form action="/login" method="POST">
                <div>
                    <input type="radio" class = "radio" id="student_radio" name="tutor_student_rad" value="student" required>
                    <label for="student_radio">Student</label>
                    <input type="radio" class = "radio" id="tutor_radio" name="tutor_student_rad" value="tutor">
                    <label for="tutor_radio">Tutor</label>
                </div>
                <div>
                    <input name='username' placeholder = "Username" required>
                </div>
                <div>
                    <input type="password" name = "password" placeholder = "Password" required>
                <div>
                    <Button type='submit' class='btn btn-primary'>Login</Button>
                </div>
            </form>
            <br>
            <p1>Don't have an account? <a href="/register">Register here!</a></p1>
        </div>
    </center>
</div>