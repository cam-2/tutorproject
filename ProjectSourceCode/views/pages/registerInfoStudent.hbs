            <input name='first_name' required>
        </div>

        <div>
            <label for='last_name'>
                <b>Last Name:</b>
            </label>
        </div>
        <div>
            <input name="last_name"></input>
        </div>

        <div>
            <label for='email'>
                <b>Email:</b>
            </label>
        </div>
        <div>
            <input name="email"></input>
        </div>


        <div>
            <Button type='submit' class='btn btn-primary'>Submit</Button>
        </div>
    </form>
</center>
