{{> message}}
<body>
<center>
    <div style = "margin-top: 10%;">
        <font size="5">
            <b>
                Please enter the following information for storage in our database for better matching.
            </b>
        </font>    
    </div>
    <form action="/registerInfoStudent" method="PUT">
        <div>
            <label for='first_name'>
                <b>First Name:</b>
            </label>
        </div>
